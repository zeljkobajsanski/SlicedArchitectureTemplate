{
  "author": "Zeljko Bajsanski",
  "classifications": [ "ASP.NET Core" ],
  "name": "Sliced ASP.NET Core",
  "description": "ASP.NET Core application based on sliced architecture",
  "identity": "Rs.BitsEverywhere.Templates.SlicedArchitecture",
  "shortName": "sliced-webapp",
  "sourceName": "StarterWebApplication",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "defaultName": "SlicedWebApp",
  "symbols": {
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    }
  },
  "primaryOutputs": [
    { "path": "StarterWebApplication/StarterWebApplication.csproj" }
  ],
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        { "text": "Run 'dotnet restore'" }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}